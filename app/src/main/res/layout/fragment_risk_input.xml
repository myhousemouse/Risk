<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingBottom="100dp">

            <!-- Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="진행률"
                    android:textColor="#757575"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/3"
                    android:textColor="#757575"
                    android:textSize="13sp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:layout_marginBottom="24dp"
                android:max="3"
                android:progress="1"
                android:progressTint="#F44336" />

            <!-- AI Suggested Risk Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#FFF3E0"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeColor="#FF9800"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardBackgroundColor="#F44336"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/app_name"
                                android:src="@android:drawable/ic_dialog_alert"
                                app:tint="@android:color/white" />
                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AI 제안 리스크"
                                android:textColor="#E65100"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/tv_risk_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="시장 수요 부족"
                                android:textColor="#212121"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_risk_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="목표 고객층의 실제 수요가 예상보다 현저히 낮을 수 있음"
                        android:textColor="#424242"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Occurrence (발생도) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="발생도 (Occurrence)"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_occurrence_value"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@android:drawable/dialog_holo_light_frame"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="#F44336"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_occurrence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stepSize="1"
                    android:value="5"
                    android:valueFrom="1"
                    android:valueTo="10"
                    app:thumbColor="#F44336"
                    app:trackColorActive="#F44336"
                    app:trackColorInactive="#E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="거의 없음 (1)"
                        android:textColor="#9E9E9E"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="매우 높음 (10)"
                        android:textColor="#9E9E9E"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이 리스크가 실제로 발생할 가능성은?"
                    android:textColor="#757575"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Severity (심각도) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="심각도 (Severity)"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_severity_value"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@android:drawable/dialog_holo_light_frame"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="#FF9800"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_severity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stepSize="1"
                    android:value="5"
                    android:valueFrom="1"
                    android:valueTo="10"
                    app:thumbColor="#FF9800"
                    app:trackColorActive="#FF9800"
                    app:trackColorInactive="#E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="경미함 (1)"
                        android:textColor="#9E9E9E"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="치명적 (10)"
                        android:textColor="#9E9E9E"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="발생했을 때 프로젝트에 미치는 영향은?"
                    android:textColor="#757575"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- Detection (검출도) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="검출도 (Detection)"
                        android:textColor="#212121"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_detection_value"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@android:drawable/dialog_holo_light_frame"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="#9C27B0"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/slider_detection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stepSize="1"
                    android:value="5"
                    android:valueFrom="1"
                    android:valueTo="10"
                    app:thumbColor="#9C27B0"
                    app:trackColorActive="#9C27B0"
                    app:trackColorInactive="#E0E0E0" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="쉽게 발견 (1)"
                        android:textColor="#9E9E9E"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="발견 어려움 (10)"
                        android:textColor="#9E9E9E"
                        android:textSize="11sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사전에 이 리스크를 감지하기 얼마나 어려운가?"
                    android:textColor="#757575"
                    android:textSize="13sp" />
            </LinearLayout>

            <!-- RPN Result -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RPN (Risk Priority Number)"
                        android:textColor="#757575"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_rpn_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="125"
                        android:textColor="#F44336"
                        android:textSize="48sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="= 발생도 × 심각도 × 검출도"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_previous"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="이전"
            android:textSize="16sp"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_next"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="다음 리스크"
            android:textSize="16sp"
            app:cornerRadius="12dp"
            app:icon="@android:drawable/ic_media_next"
            app:iconGravity="end" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

